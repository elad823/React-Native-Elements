{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmit": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", ".ci/typescript/*"]
}
